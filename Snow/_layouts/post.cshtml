@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Snow.ViewModels.PostViewModel>
@using System.Collections.Generic
@{
Layout = "default.cshtml";
}
<meta name="description" content="@Model.MetaDescription" />
<meta name="author" content="@Model.Author" />
<div id="post">
  <h1>@Model.Title</h1>
  <div class="post-note">
    posted on @Model.PostDate.ToString("dd MMM yyyy")
    @foreach (var category in Model.Categories) {
    @:| <a href="/category/@category.Url">@category.Name</a>
  }

